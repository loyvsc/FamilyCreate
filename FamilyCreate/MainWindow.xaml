                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="40" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Название" Width="120" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Текст" Binding="{Binding Text}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
