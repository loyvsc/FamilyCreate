                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="40" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Название" Width="140" Binding="{Binding Name}"/>
                        </DataGrid.Columns>
